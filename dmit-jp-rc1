// Convert bytes to GB
function bytesToGB(bytes) {
    return (bytes / (1024 * 1024 * 1024)).toFixed(2);
}

let your_url = " ";
let arg;
if (typeof $argument != 'undefined') {
    arg = Object.fromEntries($argument.split('&').map(item => item.split('=')));
};

const URL = arg?.url || your_url;

// é¢æ¿
let panel = {};
panel.title = arg?.title || 'ğŸ¤–DMIT-JP';  // Change the default title to 'DMIT-JP'
panel.icon = arg?.icon;

// å‘é€è¯·æ±‚è·å–ä¿¡æ¯
const request = {
    url: URL,
    timeout: 3000
};

$httpClient.get(request, function(error, response, data) {
    if (error) {
        console.log('error: '+error);
        $done({title:'å•Šå‘ƒï½', content:'å®Œè›‹äº†ï¼Œå‡ºé”™äº†ï¼çœ‹çœ‹æ˜¯ä¸æ˜¯ç«¯å£æ²¡æ‰“å¼€ï¼Ÿ'+error});
    } else  {
        const Data = JSON.parse(data);
        
        console.log(Data);

        panel.content = `ç»Ÿè®¡æ—¶é—´ï¼š${Data.last_time}\n` +
            `å…¥ç«™: ${bytesToGB(Data.bytes_recv)} GB` + '    |    ' + 
            `å‡ºç«™: ${bytesToGB(Data.bytes_sent)} GB\n` +
            `ç”¨é‡: ${bytesToGB(Data.bytes_total)} GB` + '     |    ' + 
            `æ€»é‡: 300 GB\n` +
            `CPU: ${parseFloat(Data.cpu_usage).toFixed(2)}%` + '           |    ' + 
            `å†…å­˜: ${parseFloat(Data.mem_usage).toFixed(2)}%\n` +
            `æœåŠ¡åˆ°æœŸæ—¶é—´ï¼šâ™¾ï¸`;

        $done(panel);
    }
});
